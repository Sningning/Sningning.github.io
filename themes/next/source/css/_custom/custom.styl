// 文章标题鼠标悬浮下划线样式
.posts-expand .post-title-link::before {
	content: "";
    position: absolute;
    width: 100%;
    height: 2px;
    bottom: 0;
    left: 0;
    background-color: #06A2E4;
    visibility: hidden;
    transform: scaleX(0);
    transition-duration: 0.2s;
    transition-timing-function: ease-in-out;
    transition-delay: 0s;
}

// 阅读全文按钮样式
.btn {
	border:2px solid #06A2E4;
	color:#06A2E4;
}

//page code background-color
.code ::selection {
    background: #2593a6;
    color: #fff;
}